{{!-- write.handlebars --}}

<h1>[{{ title }}] {{#if (eq mode "create")}}Writing{{else}}Editing{{/if}}</h1>

<div>
    <form name="boardForm" method="post" {{#if (eq mode "create")}}action="/write" {{else}}action="/modify" {{/if}}>
        {{#if (eq mode "modify")}}
        <input type="hidden" name="id" value="{{post._id}}" />
        {{/if}}
        
        <div>
            <label>Title</label>
            <input type="text" name="title" placeholder="Enter a title" value="{{post.title}}" />
        </div>

        <div>
            <label>Author</label>
            <input type="text" name="writer" placeholder="Enter your name" value="{{post.writer}}" />
        </div>

        <div>
            <label>Password</label>
            <input type="password" name="password" placeholder="Enter your password" />
        </div>

        <div>
            <label>Write the text</label><br />
            <textarea placeholder="text" name="content" cols="50" row="10">{{post.content}}</textarea>
            <br />
        </div>

        <div>
            <button type="submit">Submit</button>
            <button type="button" onclick="location.href='/'">Cancel</button>
        </div>
    </form>
</div>