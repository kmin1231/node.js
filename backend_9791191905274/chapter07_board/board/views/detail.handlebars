{{!-- detail.handlebars --}}

<h1>{{title}}</h1>
{{#with post}}
<h2 class="text-xl">{{title}}</h2>
<div>
    Author: <b>{{writer}}</b>
</div>

<div>
    Views: {{hits}} | Dates Posted: {{dateString createdDt}}
    <button onclick="modifyPost()">Edit</button>
    <button onclick="deletePost()">Delete</button>
</div>

<div>
    <pre>{{content}}</pre>
</div>

<section>
    <div>
        <h3>{{lengthOfList comments}} comments</h3>
    </div>

    <form method="post" action="/write-comment">
        <div>
            <div>
                <input type="text" name="name" placeholder="Name" />
                <input type="password" name="password" placeholder="Password" />
            </div>

            <div>
                <textarea cols="40" rows="3" name="comment" placeholder="Write your comment"></textarea>
                <br /><br /><button>Add comment</button>
            </div>
        </div>
    </form>
</section>

<section>
    <div>
        <div>
            Author: <b>Comment writer</b>
        </div>
        <div>
            Date Posted: 2024-09-01 00:00:00
            <button onclick="deleteComment('1')">Delete</button>
        </div>
    </div>

    <div>
        <pre>{{comment}}</pre>
    </div>
</section>
{{/with}}

<footer>
    <div>
        <a href="/">Back to list</a>
    </div>
</footer>

<script>
    const postOption = {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
    }

    async function modifyPost() {
        const password = prompt("Enter your password");
        if (!password) {
            return;
        }

        const result = await fetch("/check-password", {
            ...postOption,
            body: JSON.stringify({ id: "{{post._id}}", password })
        });

        const data = await result.json();

        if (data.isExist) {
            document.location = "/modify/{{post._id}}"
        } else {
            alert("The password is incorrect!");
        }
    }
    

    const deleteOption = {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json',
        },
    }

    async function deletePost() {
        const password = prompt("Enter the password to delete.");

        if (!password) {
            return;
        }

        const result = await fetch("/delete", {
            ...deleteOption,
            body: JSON.stringify({ id: "{{post._id}}", password })
        });

        const data = await result.json();
        if (!data.isSuccess) {
            alert("Deletion failed. Please check the password!");
            return;
        }

        document.location = "/";
    }
</script>